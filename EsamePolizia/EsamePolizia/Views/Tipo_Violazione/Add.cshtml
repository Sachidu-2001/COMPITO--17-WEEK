@model EsamePolizia.Models.Tipo_Violazione

@{
    ViewData["Title"] = "Aggiungi Violazione";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Add" method="post">
    <div class="form-group">
        <label for="Descrizione">Descrizione Violazione</label>
        <input type="text" class="form-control" id="Descrizione" name="Descrizione" required />
    </div>

    <button type="submit" class="btn btn-primary">Salva</button>
</form>