@model IEnumerable<EsamePolizia.Models.Anagrafica>

@{
    ViewData["Title"] = "Elenco Anagrafiche";
}

<h1>@ViewData["Title"]</h1>

<a href="@Url.Action("Add")" class="btn btn-primary">Aggiungi Anagrafica</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>Cognome</th>
            <th>Indirizzo</th>
            <th>Città</th>
            <th>CAP</th>
            <th>Codice Fiscale</th>
            <th>Azioni</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var anagrafica in Model)
        {
            <tr>
                <td>@anagrafica.Id_Anagrafica</td>
                <td>@anagrafica.Name</td>
                <td>@anagrafica.Surname</td>
                <td>@anagrafica.Indirizzo</td>
                <td>@anagrafica.Città</td>
                <td>@anagrafica.CAP</td>
                <td>@anagrafica.Cod_Fisc</td>
                <td>
                    <a href="@Url.Action("Delete", new { id = anagrafica.Id_Anagrafica })" class="btn btn-danger">Elimina</a>
                </td>
            </tr>
        }
    </tbody>
</table>