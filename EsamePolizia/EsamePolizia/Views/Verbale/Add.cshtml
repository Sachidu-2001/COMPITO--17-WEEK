@model EsamePolizia.Models.Verbale

@{
    ViewData["Title"] = "Aggiungi Verbale";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Add" method="post">
    <div class="form-group">
        <label for="DataViolazione">Data Violazione</label>
        <input type="date" class="form-control" id="DataViolazione" name="DataViolazione" required />
    </div>
    <div class="form-group">
        <label for="IndirizzoViolazione">Indirizzo Violazione</label>
        <input type="text" class="form-control" id="IndirizzoViolazione" name="IndirizzoViolazione" required />
    </div>
    <div class="form-group">
        <label for="Nominativo_Agente">Agente</label>
        <input type="text" class="form-control" id="Nominativo_Agente" name="Nominativo_Agente" required />
    </div>
    <div class="form-group">
        <label for="Importo">Importo</label>
        <input type="number" class="form-control" id="Importo" name="Importo" required />
    </div>
    <div class="form-group">
        <label for="DecurtamentoPunti">Decurtamento Punti</label>
        <input type="number" class="form-control" id="DecurtamentoPunti" name="DecurtamentoPunti" />
    </div>

    <button type="submit" class="btn btn-primary">Salva</button>
</form>